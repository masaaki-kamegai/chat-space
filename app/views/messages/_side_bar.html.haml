.side_bar
  .side_bar__username
    .side_bar__username__box
      .side_bar__username__box__left
        = current_user.name
      .side_bar__username__box__right
        = link_to new_group_path, class: "iconedit" do
          %i.far.fa-edit
        = link_to edit_user_path(current_user) , class: "iconcog" do
          %i.fa.fa-cog
  
  .side_bar__grouplist
    - current_user.groups.each do |group|
      .side_bar__grouplist__group
        = link_to '#' do
          .side_bar__grouplist__group__name
            = group.name
          .side_bar__grouplist__group__message
            メッセージありません
    
  